<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- YouTube Player View -->
    <com.demo.youtubeplayer.YouTubePlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:background="#000000" />

    <!-- Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▶ Play"
            android:textSize="14sp" />

        <Button
            android:id="@+id/pauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏸ Pause"
            android:textSize="14sp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Quality and Speed -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/qualityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quality: Auto"
            android:textSize="12sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/speedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed: Normal"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Status -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Loading..."
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:padding="8dp" />

    <!-- Time -->
    <TextView
        android:id="@+id/timeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time: 0:00"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="#CCCCCC"
        android:fontFamily="monospace" />

    <!-- Info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✓ No redirects  ✓ No copy link  ✓ No share  ✓ No logo"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:layout_marginTop="24dp" />

</LinearLayout>
